    // simple utilities and UX
    function scrollToId(id){
      const el = document.getElementById(id);
      if(el) el.scrollIntoView({behavior:'smooth',block:'start'});
    }
    document.getElementById('explore').addEventListener('click',()=>scrollToId('research'))
    document.getElementById('get-in').addEventListener('click',()=>scrollToId('contact'))// Mobile menu toggle (basic)
const menuToggle = document.getElementById('menuToggle')
menuToggle && menuToggle.addEventListener('click',()=>{
  const navUl = document.querySelector('nav ul')
  if(navUl.style.display === 'flex') navUl.style.display = ''
  else navUl.style.display = 'flex'
  navUl.style.flexDirection = 'column'
  navUl.style.background = 'rgba(7,18,37,0.9)'
  navUl.style.position = 'absolute'
  navUl.style.right = '24px'
  navUl.style.top = '64px'
  navUl.style.padding = '12px'
  navUl.style.borderRadius = '10px'
  navUl.style.boxShadow = '0 6px 24px rgba(2,6,23,0.6)'
})

// Contact form (demo-only; replace with server endpoint when ready)
function handleForm(e){
  e.preventDefault()
  const name = document.getElementById('name').value.trim()
  const email = document.getElementById('email').value.trim()
  const message = document.getElementById('message').value.trim()
  const resp = document.getElementById('formResp')
  if(!name||!email||!message){resp.textContent='Please fill required fields.';return false}
  // simulate send
  resp.textContent = 'Message queued. We will respond via email or Telegram.'
  setTimeout(()=>{resp.textContent='Thank you — your message was sent.'},900)
  document.getElementById('contactForm').reset()
  return false
}
function clearForm(){document.getElementById('contactForm').reset();document.getElementById('formResp').textContent=''}

</script></body>

